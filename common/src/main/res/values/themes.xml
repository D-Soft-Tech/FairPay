<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="CommonTheme.Fairpay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_light_mode</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="splashScreenThemeLightMode" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:windowBackground">@drawable/splash_screen_light_mode</item>
        <item name="android:statusBarColor">@color/background_light_mode</item>

    </style>

    <style name="page_heading_text" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/avenir_heavy</item>
        <item name="android:textColor">@color/background_dark_mode</item>
        <item name="android:textSize">@dimen/dimen_26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="top_corner_login_text" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dimen_30dp</item>
        <item name="android:text">@string/login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/avenir_medium</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="top_corner_signup_text" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dimen_30dp</item>
        <item name="android:text">@string/signup</item>
        <item name="android:textColor">@color/background_dark_mode</item>
        <item name="android:fontFamily">@font/avenir_heavy</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="onboarding_screen_sub_heading_text" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_marginTop">@dimen/dimen_15dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/avenir_medium</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/background_dark_mode</item>
    </style>

    <style name="page_sub_heading_text" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:fontFamily">@font/avenir_heavy</item>
        <item name="android:textColor">@color/background_dark_mode</item>
    </style>

    <style name="page_sub_heading_detail_text" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_15dp</item>
        <item name="android:fontFamily">@font/avenir_medium</item>
        <item name="android:textColor">@color/background_dark_mode</item>
    </style>

    <style name="form_edit_text" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:fontFamily">@font/avenir_heavy</item>
        <item name="android:textColor">@color/background_dark_mode</item>
    </style>

    <style name="form_edit_text_heading" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tertiary_color</item>
        <item name="android:fontFamily">@font/avenir_medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="primary_button" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_button_bg</item>
        <item name="android:fontFamily">@font/avenir_medium</item>
        <item name="android:paddingStart">@dimen/dimen_20dp</item>
        <item name="android:paddingEnd">@dimen/dimen_20dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/background_dark_mode</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
    </style>

    <style name="facebook_login_btn" parent="primary_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/dimen_10dp</item>
        <item name="android:paddingBottom">@dimen/dimen_10dp</item>
        <item name="android:text">@string/facebook</item>
        <item name="android:paddingEnd">@dimen/dimen_8dp</item>
        <item name="android:background">@drawable/facebook_btn_bg</item>
        <item name="android:drawableStart">@drawable/ic_baseline_facebook_24</item>
    </style>

    <style name="twitter_login_btn" parent="facebook_login_btn">
        <item name="android:text">@string/twitter</item>
        <item name="android:background">@drawable/twitter_btn_bg</item>
        <item name="android:drawableStart">@drawable/ic_twitter</item>
    </style>

    <style name="onboarding_screen_heading_text" parent="page_heading_text">
        <item name="android:textSize">@dimen/dimen_20sp</item>
        <item name="android:layout_marginStart">@dimen/dimen_40dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_40dp</item>
    </style>

    <dimen name="dimen_26sp">26sp</dimen>
</resources>