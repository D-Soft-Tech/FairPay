<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dimen_100dp"
    android:layout_height="wrap_content"
    android:background="@color/background_light_mode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/currency_card_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_gravity="center"
            android:layout_width="@dimen/dimen_70dp"
            android:layout_height="@dimen/dimen_70dp"
            android:background="@drawable/currency_symbol_bg"
            app:srcCompat="@drawable/ic_dollar"
            android:contentDescription="@string/content_desc" />

        <TextView
            android:id="@+id/textView11"
            style="@style/page_heading_text"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:textColor="@color/background_dark_mode"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/usd"
            android:textSize="@dimen/dimen_20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>